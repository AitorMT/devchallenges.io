---
import Layout from '@/layouts/Layout.astro'
import { fonts } from '@/consts/fonts'
import Image from 'astro/components/Image.astro'
import heroImageDesktop from '@/assets/business-blog-card/HeroImageDesktop.webp'
import WhiteOverlay from '@/assets/business-blog-card/white-overlay.svg'
import profilePicture from '@/assets/business-blog-card/avatar-image-business-card.webp'
---

<Layout
  title="Business Blog Card - devchallenges.io"
  description="A business blog card from Devchallenges.io!"
  fonts={fonts.BusinessBlogCard}
>
  <div
    class="flex h-dvh w-dvw items-center justify-center overflow-hidden bg-[var(--background)] p-4"
  >
    <div class="flex h-[545px] w-[418px] flex-col rounded-lg bg-[var(--bgCard)]">
      <div class="relative">
        <Image
          src={heroImageDesktop}
          alt="Business Blog Card"
          class="h-full w-full rounded-lg object-cover"
          fetchpriority="high"
          loading="eager"
        />
        <WhiteOverlay class={'absolute -bottom-0.5 left-0 w-full'} />
      </div>
      <div class="flex flex-col gap-3 px-8">
        <h1>Perfect solution for small business</h1>
        <p>Small businesses need to generate leads to grow. You can use tools like Ringy.</p>
      </div>
      <hr class={'w-full border-[var(--background)] mt-7'} />
      <div class="flex flex-[1] items-center gap-4 px-8">
        <Image
          src={profilePicture}
          alt="Amy Burgess"
          class="h-[48px] w-[48px] rounded-full border-[4px] border-[var(--background)]"
          fetchpriority={'high'}
          loading={'eager'}
        />
        <div>
          <p class="name">Amy Burgess</p>
          <p>Customer Manger, Solution Oy</p>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  :root {
    --font-family: 'Lato', 'Adjusted Arial Fallback';
    --background: #f2f5f9;
    --bgCard: #ffffff;
    --colorTitle: #111729;
    --colorText: #626774;
    --fontTitle: 1.5rem;
    --fontBody: 1rem;
  }

  h1 {
    font-family: 'Poppins';
    font-weight: 400;
    font-size: var(--fontTitle);
    color: var(--colorTitle);
  }

  p {
    font-size: var(--fontBody);
    color: var(--colorText);
  }

  .name {
    font-family: 'Poppins';
    font-weight: 400;
    font-size: var(--fontBody);
    color: var(--colorTitle);
  }

  .description {
    font-size: var(--fontBody);
    color: var(--colorText);
  }

  @font-face {
    font-family: 'Adjusted Arial Fallback';
    src: local(Arial);
    size-adjust: 112%;
    ascent-override: 74%;
    descent-override: normal;
    line-gap-override: normal;
  }

  @font-face {
    font-family: 'Lato';
    src: url('/fonts/Lato/Lato-Regular.woff2') format('woff2');
    font-weight: 400;
    font-display: swap;
  }

  @font-face {
    font-family: 'Poppins';
    src: url('/fonts/Poppins/Poppins-Medium.woff2') format('woff2');
    font-weight: 400;
    font-display: swap;
  }

  html {
    font-family: var(--font-family);
  }
</style>
